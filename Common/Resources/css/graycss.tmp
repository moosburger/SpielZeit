/*QDockWidget*/
#DockedBar {
    titlebar-close-icon: none;
    titlebar-normal-icon: url(:/images/Maximize_bk.png);
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 varBackgroundCLR, stop: 1 varIconHvrBg);
